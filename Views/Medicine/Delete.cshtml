@model PharmacySystem.Models.Medicine
@{
    ViewData["Title"] = "Delete Medicine";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <h6>Are you sure you want to delete this medicine?</h6>

                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Details</dt>
                    <dd class="col-sm-8">@Model.Details</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.Price</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
